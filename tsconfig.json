{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "outDir": "./backend/dist",
    "rootDir": "./backend/src",
    "moduleResolution": "Node",
    "types": ["node", "vitest/globals"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitOverride": true,
  },
  "include": ["./backend/src/**/*"],
}