{
  "name": "ratemypet",
  "description": "RateMyPet backend (Clean Architecture + TDD)",
  "version": "0.1.0",
  "author": "maurolps",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maurolps/ratemypet"
  },
  "keywords": [
    "node",
    "typescript",
    "clean-architecture",
    "tdd"
  ],
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "dev": "tsx --env-file=backend/.env --watch backend/src/main/server.ts",
    "start": "node --env-file=backend/.env backend/dist/server.js",
    "debug":"npm run build:debug && node --enable-source-maps --inspect --env-file=backend/.env backend/dist/server.js",
    "typecheck": "tsc --noEmit",
    "build": "tsup backend/src/main/server.ts --format esm --target node22 --clean --tsconfig tsconfig.build.json --out-dir ./backend/dist --minify",
    "build:debug": "tsup backend/src/main/server.ts --format esm --target node22 --clean --tsconfig tsconfig.build.json --out-dir ./backend/dist --sourcemap inline --no-minify --splitting",
    "test": "vitest run --project unit --project integration",
    "test:watch": "vitest --project unit",
    "test:coverage": "vitest run --coverage",
    "test:staged": "vitest related --run --project unit --silent=true",
    "test:integration": "vitest run --project integration",
    "db:up": "docker compose -f docker-compose.dev.yml up",
    "db:down": "docker compose -f docker-compose.dev.yml down",
    "db:init": "npm run db:up && npm run migrate",
    "migrate": "dbmate --env-file dbmate.env --wait up",
    "migrate:new": "dbmate --env-file dbmate.env new"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "execa": "^9.6.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "pg": "^8.16.3",
    "tsx": "^4.20.6",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@testcontainers/postgresql": "^11.6.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "@types/pg": "^8.15.5",
    "@vitest/coverage-v8": "^3.2.4",
    "dbmate": "^2.28.0",
    "git-commit-msg-linter": "^5.0.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
